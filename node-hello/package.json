name: CI/CD Pipeline

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm install
        working-directory: ./   # ðŸ‘ˆ Root (where package.json exists)

      - name: Run tests
        run: npm test
        working-directory: ./   # ðŸ‘ˆ Same as above

      - name: Build Docker image
        run: docker build -t my-node-app .


